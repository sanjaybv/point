function init() {

	var mouse = {x: 0, y: 0};
	var pointSpace;

	pointSpace = document.getElementById("pointspace");
	ctx = pointSpace.getContext('2d');

	ctx.lineWidth = 5;
	ctx.lineJoin = 'round';
	ctx.lineCap = 'round';
	ctx.strokeStyle = 'blue';

	$("#pointspace").mousemove(function(e) {
		mouse.x = e.pageX - getOffset(pointSpace).left;
		mouse.y = e.pageY - getOffset(pointSpace).top;
	});

	$("#pointspace").mousedown(function(e) {
		ctx.beginPath();
		ctx.moveTo(mouse.x, mouse.y);
		$("#pointspace").mousemove(onPaint);
	});

	$("#pointspace").mouseup(function(e) {
		$("#pointspace").unbind('mousemove', onPaint)
	});

	var onPaint = function() {
		ctx.lineTo(mouse.x, mouse.y);
		ctx.stroke();
	}

	function getOffset( el ) {
		var _x = 0;
		var _y = 0;
		while( el && !isNaN( el.offsetLeft ) && !isNaN( el.offsetTop ) ) {
			_x += el.offsetLeft - el.scrollLeft;
			_y += el.offsetTop - el.scrollTop;
			el = el.offsetParent;
		}
		return { top: _y, left: _x };
	}
}